<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Alarm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Start Time"
            android:textSize="16sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_date_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Date and Time" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart display"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/smart_display_switch"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of snoozing"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/snooze_time_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="48dp"
        android:entries="@array/spinner1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Line of Defense"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/last_line_of_defense_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:entries="@array/spinner3"/>

    <Button
        android:id="@+id/deploy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deploy it!"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="12dp" />

</LinearLayout>
